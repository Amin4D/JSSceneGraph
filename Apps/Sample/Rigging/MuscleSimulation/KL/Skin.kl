

use Math;
use BezierKeyframe;
use Color;
use Vec2;
use Vec3;
use Xfo;
use FabricOGL;
use DebugGeometry;


operator setVertexColorByWeight(
  io Scalar stickWeights<>,
  io Scalar slideWeights<>,
  io Scalar bulgeWeights<>,
  io Color vertexColor,
  in Size index
){
  vertexColor.r = 0.3 + (0.7 * stickWeights[index]);
  vertexColor.g = 0.3 + (0.7 * slideWeights[index]);
  vertexColor.b = 0.3 + (0.7 * bulgeWeights[index]);
}


