operator incrementControllerLocalTime(
  io Scalar globalTime,
  io Scalar timeStep,
  io Scalar playbackRate,
  io Scalar localTime,
  io Vec2 timerange
) {
  if (timeStep > 0.0) {
    localTime += (globalTime + (timeStep * playbackRate));
    //  if( localTime > timerange.y ){
    //    localTime = localTime - (timerange.y - timerange.x);
    //  }
  }
}